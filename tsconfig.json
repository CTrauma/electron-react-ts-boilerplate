{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": false,
		"sourceMap": false,
                "lib": ["es2017", "dom"],
		"jsx": "react"
	},
	"compileOnSave": false,
  "buildOnSave": false,
	"include": [
		"./main.ts",
		"./app/**/*.ts",
		"./app/**/*.tsx"
	],
  "filesGlob" : [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ]
}
